@model IEnumerable<Geo.Models.ApplicationUser>
@{
    ViewBag.Title = "Связь с разработчиками";
}
<h2 style="text-align:center">@ViewBag.Title</h2>
<h3 style="text-align:center">Для получения прав администратора, свяжитесь с одним из администраторов</h3>

<table class="table">
    <tr>
        <th>Почта</th>
        <th>Логин</th>
        <th>Написать</th>
    </tr>
    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
    @foreach (var item in Model)
        {
            if (item.Roles.Count() == 1)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.UserName</td>
                    <td><a href="mailto:@item.Email">@item.Email</a></td>
                    <td>
                         @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                         @if (User.IsInRole("Admin"))
                         {
                             <div margin: 0px 4px;>
                              @Html.ActionLink("Admin", "Admin", new { id = item.Id })
                             </div>
                             <div margin: 0px 4px;>
                             @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                             </div>   
                          }
                    </td>
                </tr>
            }
        }
</table>
