@model IEnumerable<Geo.Models.Floor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
           В каком здании@* @Html.DisplayNameFor(model => model.Building.Nameof)*@
        </th>
        <th>
            Описание@*@Html.DisplayNameFor(model => model.Description)*@
        </th>
        <th>
           Номер этажа@* @Html.DisplayNameFor(model => model.Level)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Building.Nameof)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Level)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) 
            @if (User.IsInRole("Admin")) 
            {
             @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>
